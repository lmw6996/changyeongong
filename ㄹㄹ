print("(다섯잔 이상이면 10% 할인)")
print("1) 아메리카노 2,500")
print("2) 까페라떼 3.000")
print("3) 에스프레소 2,500")
print("4) 사과쥬스 1,000")
a=input("카페 메뉴를 선택하세요:")
b=int(input("수량을 선택하세요:"))
if a=="아메리카노" or a=="에스프레소":
    if b>=5:
       print(int(2500*b*0.9))
    else:
        print(2500*b)
if a=="까페라떼":
    if b>=5:
       print(int(3000*b*0.9))
    else:
        print(3000*b)ㄹ
if a=="사과쥬스":
    if b>=5:
       print(int(1000*b*0.9))
    else:
        print(1000*b)
